<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20pt"
        android:text="옵션 선택" />
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="위치"
            android:textColor="#111010"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/hopeaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="가격"
            android:textColor="#111010"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="월세 100/90" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="옵션"
            android:textColor="#111010"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/realoption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="세탁기, 냉장고, 에어컨 있음" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="관리비"
            android:textColor="#111010"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/extrafee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="없음" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="주차공간"
            android:textColor="#111010"
            android:textSize="23sp" />
        <CheckBox
            android:id="@+id/parkingyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="있음" />

        <CheckBox
            android:id="@+id/parkingno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="없음" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="임대기간"
            android:textColor="#111010"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="입주가능일"
            android:textColor="#111010"
            android:textSize="23sp" />

        <CheckBox
            android:id="@+id/rightnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="즉시입주" />

        <CheckBox
            android:id="@+id/nego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜협의" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="40dp"

            android:text="      방 종류"
            android:textColor="#111010"
            android:textSize="23sp" />


        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="원룸" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="투룸" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기타" />
    </LinearLayout>


</LinearLayout>